{
  "name": "grandus-components",
  "version": "1.0.2",
  "description": "Grandus ecommerce premade components",
  "keywords": [],
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 \"./src/**/*.css\" \"./src/**/*.scss\" dist/ && echo 'Style files copied.'",
    "test": "jest --config jestconfig.json",
    "build": "npm run clean && tsc && npm run copy-files",
    "dev": "concurrently --kill-others \"npm run watch:ts\" \"npm run watch:scss\"",
    "watch:ts": "tsc -w",
    "watch:scss": "nodemon -e css,scss --watch ./src --exec \"npm run copy-files\"",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build"
  },
  "author": "For Best Clients, s.r.o. <info@forbestclients.com> (https://www.forbestclients.com/)",
  "license": "ISC",
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "jest": "^27.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2"
  },
  "files": [
    "dist/**/*"
  ]
}
